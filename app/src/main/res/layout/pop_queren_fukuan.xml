<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_btn_bg_color_white2"
    style="@style/RelativeLayout_Default"
    android:padding="15dp">
    <ImageView
        android:id="@+id/delete_pop_sure"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/pop_delete"/>
<LinearLayout

    android:layout_marginTop="30dp"
    android:layout_below="@+id/delete_pop_sure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="#333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传凭证（支付成功的截图）"/>
   <ImageView
       android:id="@+id/sure_img"
       android:src="@drawable/ic_moren"
       android:layout_gravity="center"
       android:layout_marginTop="30dp"
       android:layout_width="156dp"
       android:layout_height="156dp"
       />


    <TextView
        android:id="@+id/comit_txt_sure"
        android:layout_marginTop="30dp"
        android:text="提交"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/drawable_btn_bg_color_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"/>

</LinearLayout>



</RelativeLayout>
