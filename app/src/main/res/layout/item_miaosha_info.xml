<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y320"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center"
        android:background="@drawable/ic"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y6"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="测试数据"
        android:textColor="@color/color_3_3_3"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:paddingRight="@dimen/x4"
            android:text="￥999.0"
            android:textColor="@color/color_ff_76_08"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/oldprice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:paddingLeft="@dimen/x4"
            android:text="￥999.0"
            android:textColor="@color/color_9_9_9"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>