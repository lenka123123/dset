<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wokun.dset.ucenter.JifenchangeActivity"
    android:background="@mipmap/background_all">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


<LinearLayout
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:background="@drawable/drawable_btn_bg_color_white2"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    >
    <LinearLayout
        android:id="@+id/lin_dsyue"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView

            android:textColor="#056196"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金票"/>
        <TextView
            android:id="@+id/ucenter_dsyue"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:textColor="#056196"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"/>


    </LinearLayout>

 <!--   <View
        android:layout_width="1dp"
        android:background="#eee"
        android:layout_height="40dp"
        android:layout_gravity="center"></View>-->
    <LinearLayout
        android:id="@+id/lin_dsmoney"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/putong_money"
            android:textColor="#056196"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"/>
        <TextView
            android:id="@+id/ucenter_dsjifen"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:textColor="#056196"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"/>
    </LinearLayout>


</LinearLayout>


    <LinearLayout
        android:background="@drawable/drawable_btn_bg_color_white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<TextView
    android:layout_marginTop="37dp"
   android:gravity="center"
    android:textSize="16sp"
    android:textColor="#333"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="请输入您要兑换的金票"/>

     <EditText
         android:id="@+id/edt_yue_count"
         android:gravity="center"
         android:layout_gravity="center"
         android:layout_marginTop="20dp"
         android:layout_width="185dp"
         android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="提示:"/>
            <TextView
                android:id="@+id/jifen_bili"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#fead00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="限额为:"/>
            <TextView
                android:id="@+id/jifen_xiane"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#fead00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1万"/>
        </LinearLayout>

   <TextView
       android:id="@+id/ucenter_zhuan"
       android:layout_marginTop="44dp"
       android:layout_marginBottom="26dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:textColor="@color/colorWhite"
       android:layout_gravity="center"
       android:gravity="center"
       android:background="@drawable/drawable_btn_bg_color_blue2"
       android:text="立即兑换"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:textSize="16sp"/>

    </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
