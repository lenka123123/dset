<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/drawable_padding_6"
    android:paddingRight="@dimen/drawable_padding_6"
    android:paddingTop="@dimen/drawable_padding_15"
    android:paddingBottom="@dimen/drawable_padding_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_ask_service"
            style="@style/TextView_Home_Navigation"
            android:drawableTop="@drawable/ic_yanzhi"
            android:textColor="@color/colorMenu"
            android:text="颜值在线" />

        <TextView
            android:id="@+id/action_chain_stores"
            style="@style/TextView_Home_Navigation"
            android:drawableTop="@drawable/ic_manyang"
            android:textColor="@color/colorMenu"
            android:text="慢养生活" />

        <TextView
            android:id="@+id/action_social_assets"
            style="@style/TextView_Home_Navigation"
            android:textColor="@color/colorMenu"
            android:drawableTop="@drawable/ic_chaozhi"
            android:text="超值神券" />

        <TextView
            android:id="@+id/action_service_in"
            style="@style/TextView_Home_Navigation"
            android:drawableTop="@drawable/ic_zhihuan"
            android:textColor="@color/colorMenu"
            android:text="置换专区" />
    </LinearLayout>
</LinearLayout>