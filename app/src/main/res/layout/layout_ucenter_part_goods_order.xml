<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ucenter_part_goods_order"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_margin="@dimen/y10"
    android:background="@color/white">

    <RelativeLayout style="@style/RelativeLayout_Default">

        <TextView
            style="@style/TextView_Style_Title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="商城订单" />

        <TextView
            android:id="@+id/action_check_more_goods_order"
            style="@style/TextView_Style_More2"
            android:text="查看全部订单" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/cart_need_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/goods_order_wait_pay"
                style="@style/TextView_UCenter_Order"
                android:drawableTop="@drawable/ic_fukuan"
                android:text="@string/tysl_state_wait_pay" />
        </RelativeLayout>
        <!--
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDriver" />-->

        <RelativeLayout
            android:id="@+id/cart_need_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/action_goods_order_wait_shipments"
                style="@style/TextView_UCenter_Order"
                android:drawableTop="@drawable/ic_fahuo"
                android:text="待发货" />
        </RelativeLayout>
        <!--
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDriver" />-->

        <RelativeLayout
            android:id="@+id/cart_need_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/action_goods_order_take_delivery_of_goods"
                style="@style/TextView_UCenter_Order"
                android:drawableTop="@drawable/ic_shouhuo"
                android:text="待收货" />
        </RelativeLayout>
        <!--
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDriver" />-->

        <RelativeLayout
            android:id="@+id/cart_need_refund"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/action_goods_order_wait_evaluate"
                style="@style/TextView_UCenter_Order"
                android:drawableTop="@drawable/ic_tuikuan"
                android:text="已完成" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>