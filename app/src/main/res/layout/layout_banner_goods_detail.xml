<?xml version="1.0" encoding="utf-8"?>
<com.itheima.loopviewpager.LoopViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lvp_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:animTime="1000"
    app:loopTime="3000">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <com.itheima.loopviewpager.LoopDotsView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            app:dotRange="10dp"
            app:dotShape="oval"
            app:dotSize="6dp" />

    <!--秒杀-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/ic_bluebg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/drawable_padding_6"
            android:paddingTop="@dimen/drawable_padding_6">

            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:text="￥123"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="14sp"
                    android:text="限时秒抢"
                    android:textColor="#fff"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:text="快捷更方便"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

                <LinearLayout
                    android:background="#e5f4ff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
               <TextView
                   android:textSize="14sp"
                   android:textColor="#056196"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="距离结束还剩："/>
                    <cn.iwgang.countdownview.CountdownView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:isHideTimeBackground="false"
                        app:isShowDay="false"
                        app:isShowHour="true"
                        app:isShowMillisecond="true"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isShowTimeBgDivisionLine="false"
                        app:isTimeTextBold="true"
                        app:suffixGravity="center"
                        app:suffixTextColor="#000000"
                        app:suffixTextSize="11sp"
                        app:timeBgColor="#056196"
                        app:timeBgSize="11dp"
                        app:timeTextColor="#FFFFFF"
                        app:timeTextSize="11sp"/>
                </LinearLayout>



                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground" />



        </LinearLayout>




        </LinearLayout>
    </RelativeLayout>
</com.itheima.loopviewpager.LoopViewPager>