<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y210"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="@dimen/x166"
        android:layout_height="@dimen/y166"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/ic_placeholder"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x44"
        android:layout_marginRight="@dimen/y30"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y16"
        android:paddingTop="@dimen/y30">

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="商品少时诵诗书所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所所名称"
            android:textColor="@color/color22"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="规格"
            android:textColor="@color/color_9_9_9"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="￥0"
                android:textColor="@color/colorShopping" />

            <TextView
                android:id="@+id/goods_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="× 0"
                android:textColor="@color/color_6_6_6" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>