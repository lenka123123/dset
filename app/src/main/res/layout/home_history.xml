<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:id="@+id/his_msg"
    android:textSize="14sp"
    android:layout_marginLeft="10dp"
    android:gravity="center"
    android:textColor="@color/colorPrimary"
    android:layout_width="wrap_content"
    android:layout_height="33dp"
    android:text="已处理"/>

<TextView
    android:id="@+id/his_content"
    android:layout_marginLeft="10dp"
   android:gravity="center_vertical"
    android:text="cesssssssss"
    android:lines="1"
    android:textSize="14sp"
    android:textColor="#333"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    />
    <ImageView
        android:id="@+id/image_his"
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/his_imgs"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/his_img1"
            android:layout_marginLeft="7dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/his_img2"
            android:layout_width="52dp"
            android:layout_marginLeft="7dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/his_img3"
            android:layout_marginLeft="7dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <TextView
        android:id="@+id/his_time"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="20122"/>

       <TextView
           android:id="@+id/his_kefu"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
       android:background="#fff"
        android:gravity="center_vertical"
        android:textColor="#999"
        android:layout_width="match_parent"
        android:layout_height="33dp"
           android:layout_marginBottom="10dp"
          android:text=""/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="5dp"
    >

</LinearLayout>
</LinearLayout>
