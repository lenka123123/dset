<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_all"
    tools:context="com.wokun.dset.ucenter.renamepassword.NamepasswordActivity">

    <LinearLayout
        android:background="@drawable/drawable_btn_bg_color_white2"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:layout_width="345dp"
        android:layout_height="255dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_zhihui_shanchu"
            style="@style/RelativeLayout_Default"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="发送您的验证码到您的手机"/>
        <LinearLayout
            android:layout_marginTop="44dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："/>

            <RelativeLayout
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.wokun.dset.login.ClearEditText
                    android:id="@+id/et_mobile"
                    android:hint="请输入验证码"
                    style="@style/EditText_Default_Mobile"
                    android:layout_marginRight="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />
                <Button
                    android:id="@+id/action_send_verify_code"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2.5dp"
                    android:layout_marginEnd="2.5dp"
                    android:background="@drawable/drawable_button_verify_code"
                    android:text="获取验证码"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_style_two" />
            </RelativeLayout>


        </LinearLayout>
         <TextView
             android:id="@+id/txt_next4"
             android:layout_marginTop="40dp"
             android:background="@drawable/drawable_btn_bg_color_blue2"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_width="match_parent"
             android:text="下一步"
             android:gravity="center"
             android:textColor="@color/colorWhite"
             android:layout_height="40dp" />


    </LinearLayout>


</LinearLayout>
