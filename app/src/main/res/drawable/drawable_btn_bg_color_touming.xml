<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充 -->
  <solid android:color="#10ffffff" /> <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="0.5dp"
        android:color="#999" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="19dp"
        android:bottomRightRadius="19dp"
        android:topLeftRadius="19dp"
        android:topRightRadius="19dp" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="@dimen/shape_padding_size_bottom"
        android:left="@dimen/shape_padding_size_bottom"
        android:right="@dimen/shape_padding_size_bottom"
        android:top="@dimen/shape_padding_size_top" /> <!-- 设置各个方向的间隔 -->
</shape>